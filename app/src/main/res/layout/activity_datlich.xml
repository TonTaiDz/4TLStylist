<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffff"
    app:cardCornerRadius="30dp"
    app:cardElevation="20dp"
    android:layout_margin="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/custom_edittext2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtTieuDe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Đặt lịch"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtTen"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext2"
            android:drawablePadding="8dp"
            android:hint="Họ và tên"
            android:paddingStart="15dp"
            android:padding="8dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edtNgay"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext2"
            android:drawablePadding="8dp"
            android:paddingStart="15dp"
            android:hint="Ngày"
            android:padding="8dp"
            android:textColor="@color/black" />


        <EditText
            android:id="@+id/edtGio"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext2"
            android:drawablePadding="8dp"
            android:paddingStart="15dp"
            android:hint="Giờ"
            android:padding="8dp"
            android:textColor="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dịch vụ: "
                android:layout_marginStart="22dp"
                android:layout_marginVertical="15dp"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <CheckBox
                android:id="@+id/cattoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cắt tóc 30k"
                android:layout_marginStart="22dp"
                />

            <CheckBox
                android:id="@+id/nhuom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nhuộm tóc 120k"
                android:layout_marginStart="22dp"
                />

            <CheckBox
                android:id="@+id/massage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="massage mặt  + gội đầu 30k "
                android:layout_marginStart="22dp"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLuu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="Đặt lịch"
                android:textAllCaps="true" />

            <Button
                android:id="@+id/btnHuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="hủy"
                android:textAllCaps="true" />


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>